<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_0.25"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_0.5"
        app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_0.25" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_0.25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_0.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_0.9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_edittext_top"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        android:padding="@dimen/login_text_padding"
        android:cursorVisible="false"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_0.9"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_0.1"
        app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_0.5" />

    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_edittext_bottom"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:padding="@dimen/login_text_padding"
        android:cursorVisible="false"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_0.9"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_0.1"
        app:layout_constraintTop_toBottomOf="@+id/email_edit_text" />

</androidx.constraintlayout.widget.ConstraintLayout>